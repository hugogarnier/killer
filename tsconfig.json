{
  "compilerOptions": {
    "target": "ES2020",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "jsx": "react-native",
    "lib": ["dom", "ESNext"],
    "moduleResolution": "node",
    "noEmit": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "strict": true,
    "typeRoots": ["./node_modules/@types/", "./customTypes", "./types.tsx"],
    "baseUrl": "./",
    "paths": {
      "@*": ["./*"],
      "mocks/*": ["./jest/*"],
      "@mocks": ["./jest"]
    }
  },
  "exclude": ["node_modules", "babel.config.js", "jest.config.js"],
  "extends": "expo/tsconfig.base"
}
